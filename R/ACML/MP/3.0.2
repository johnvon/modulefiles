#%Module######################################################################
#
# R modulefile
#
set PRODUCT R
set _VERSION 3.0.2 
set _ARCH ACML
set _THREADS MP
set _CURPATH /cac/contrib/R-${_VERSION}-${_ARCH}/${_THREADS}

# cannot load multiple R version simultaneously
conflict R 

proc ModulesHelp { } {
puts stderr "This modulefile sets the default version of $PRODUCT"
puts stderr "to $_VERSION ($_ARCH) (threads=${_THREADS})"
}

prepend-path PATH $_CURPATH/bin
